# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL)
# ==========================================
# Nombre de la base de datos
POSTGRES_DB=agriculture_db

# Usuario de la base de datos
POSTGRES_USER=django_user

# Contraseña de la base de datos
# ¡IMPORTANTE! Cambiar este valor en el archivo .env real
POSTGRES_PASSWORD=cambiar_esta_contraseña_segura

# Host de la base de datos (Debe coincidir con el nombre del servicio en docker-compose)
POSTGRES_HOST=db

# Puerto de la base de datos (Por defecto 5432)
POSTGRES_PORT=5432


# ==========================================
# CONFIGURACIÓN DE DJANGO
# ==========================================
# Clave secreta para seguridad criptográfica
# Generar una nueva clave aleatoria para producción
DJANGO_SECRET_KEY=generar_clave_secreta_aleatoria_aqui

# Modo Debug (True para desarrollo, False para producción)
DJANGO_DEBUG=True

# Hosts permitidos (separados por comas)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0


# ==========================================
# CONFIGURACIÓN DE INTELIGENCIA ARTIFICIAL
# ==========================================
# URL interna para conectar Open WebUI con Ollama
OLLAMA_BASE_URL=http://ollama:11434

# ==========================================
# CONFIGURACIÓN AUTOMÁTICA DE SUPERUSUARIO
# ==========================================
# Estas variables son leídas por Django al usar createsuperuser --noinput
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin
